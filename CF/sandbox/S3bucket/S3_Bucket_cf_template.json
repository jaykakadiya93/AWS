{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "S3 Bucket Creation and ADD S3 Trigger To Lambda",
  "Parameters": {
    "BucketName": {
      "Description": "S3 bucket name",
      "Type": "String"
    },
    "KMSKey": {
      "Description": "AWS-KMS key Value",
      "Type": "String"
    }
  },
  "Resources": {
    "InputDataBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Ref": "BucketName"
        },
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "KMSMasterKeyID": {
                  "Fn::Join": [
                    ":",
                    [
                      "arn",
                      "aws",
                      "kms",
                      {
                        "Ref": "AWS::Region"
                      },
                      {
                        "Ref": "AWS::AccountId"
                      },
                      {
                        "Ref": "KMSKey"
                      }
                    ]
                  ]
                },
                "SSEAlgorithm": "aws:kms"
              }
            }
          ]
        }
      }
    }
  }
}