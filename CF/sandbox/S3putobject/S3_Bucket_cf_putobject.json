{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "S3 Bucket Creation and ADD S3 Trigger To Lambda",
  "Parameters": {
    "BucketName": {
      "Description": "S3 bucket name",
      "Type": "String"
    },
    "FunctionName": {
      "Description": "Lambda Function Name For Header Validation",
      "Type": "String"
    }
  },
  "Resources": {
    "S3PutObject1": {
      "Type": "Custom::S3PutObject",
      "Properties": {
        "ServiceToken": {
          "Fn::Join": [
            ":",
            [
              "arn",
              "aws",
              "lambda",
              {
                "Ref": "AWS::Region"
              },
              {
                "Ref": "AWS::AccountId"
              },
              "function",
              {
                "Ref": "FunctionName"
              }
            ]
          ]
        },
        "Bucket": {
          "Ref": "BucketName"
        },
        "Key": "test/"
      }
    }
  }
}