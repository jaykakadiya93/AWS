{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda function that Export Orion DynamoDB To S3\n",
  "Parameters": {
    "S3CodeDeployementBucket": {
      "Description": "S3 Code Deployment Bucket",
      "Type": "String"
    },
    "ZipFileName": {
      "Description": "ZIP File Name",
      "Type": "String"
    },
    "LambdaFunctionName": {
      "Description": "Lambda Function Name",
      "Type": "String"
    },
    "Role": {
      "Description": "Lambda creation Role",
      "Type": "String"
    },
    "ImportDynamoDBStreamARN": {
      "Description": "Lambda creation Role",
      "Type": "String"
    },
    "StartingPosition": {
      "Description": "Lambda creation Role",
      "Type": "String",
      "AllowedValues": [
        "LATEST",
        "TRIM_HORIZON",
        "AT_TIMESTAMP"
      ]
    }
  },
  "Resources": {
    "LambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": {
          "Ref": "LambdaFunctionName"
        },
        "Description": "Lambda function that Export Orion DynamoDB To S3\n",
        "Code": {
          "S3Bucket": {
            "Ref": "S3CodeDeployementBucket"
          },
          "S3Key": {
            "Ref": "ZipFileName"
          }
        },
        "Handler": "index.lambda_handler",
        "MemorySize": 1024,
        "Role": {
                "Fn::Join": [
                  ":",
                  [
                    "arn",
                    "aws",
                    "iam",
                    "",
                    {
                      "Ref": "AWS::AccountId"
                    },
                    {
                      "Ref": "Role"
                    }
                  ]
                ]
              },
        "Runtime": "python3.6"
      }
    },
    "DataTableStream": {
      "Type": "AWS::Lambda::EventSourceMapping",
      "Properties": {
        "BatchSize": 100,
        "Enabled": true,
        "EventSourceArn": { "Fn::ImportValue" : {"Ref" : "ImportDynamoDBStreamARN"}
              },
        "FunctionName": {
          "Fn::GetAtt": [
            "LambdaFunction",
            "Arn"
          ]
        },
        "StartingPosition": {"Ref" : "StartingPosition"}
      }
    }
  }
}